{
    "compilerOptions": {
      "target": "ES6",              
      "module": "commonjs",         
      "strict": true,               
      "esModuleInterop": true,      
      "skipLibCheck": true,         
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",           
      "rootDir": "./src",           
      "resolveJsonModule": true     
    },
    "include": [
      "src/**/*.ts"
, "src/renderer/vite.config.js" ,
"src/renderer/**/*.d.ts"   ],
    "exclude": [
      "node_modules"
    ]
  }
  